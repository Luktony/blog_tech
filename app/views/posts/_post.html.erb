


<article class="post">
    
  <div class="container">
    <div class="row">
      <div class="col-md-6">
      </div>
      <div class="col-md-6">
        <h2><%=post.title%></h2>
        <p class="post-meta"><%=month_day(post.created_at)%></p>
      
        <p><%=truncate(post.body,length:150)%></p>
        <p> <%= link_to'Continue reading...',post,class:"continue-reading"%> </p>
     <%=link_to"Edit",edit_post_path(post),class:"btn-edit" %>
    <%=button_to"Destroy",post_path(post),method: :delete,data:{"turbo-confirm":"Are you sure?"},class:"btn-destroy" %>
      </div>
    </div>
  </div>
</article>
